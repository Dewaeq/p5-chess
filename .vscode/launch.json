{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://localhost:5500/public",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Launch Firefox",
            "request": "launch",
            "type": "firefox",
            "reAttach": true,
            "url": "http://127.0.0.1:5500/public/index.html",
            "webRoot": "${workspaceFolder}",
            "pathMappings": [
                {
                    "url": "http://127.0.0.1:5500",
                    "path": "${workspaceFolder}"
                },
            ]
        }
    ]
}